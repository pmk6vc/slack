{
  "name": "slack",
  "version": "1.0.0",
  "description": "Scalable Slack clone",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier:check": "npx prettier -c .",
    "prettier:fix": "npx prettier --write .",
    "lint": "npx eslint .",
    "prebuild": "npm run prettier:check && npm run lint",
    "build": "tsc",
    "migrate": "node-pg-migrate",
    "migrate-up:docker": "dotenv npm run migrate up",
    "migrate-down:docker": "dotenv npm run migrate down 99999",
    "prestart": "npm run build",
    "start": "node .",
    "start:docker": "docker compose -p slack up --build --force-recreate --detach",
    "prepare": "if [ \"$HUSKY\" != \"0\" ]; then husky; else echo 'Ignoring Husky in CI'; fi"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@testcontainers/postgresql": "^11.7.2",
    "@types/pg": "^8.15.5",
    "express": "^5.1.0",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
